<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
</head>
<body>
<div class="films">
    {{#films}}
        <title>{{title}}</title>
        <div class="film">
            <div class="numimg">
                <div>{{rank}}</div>
                <img src="{{image}}" width="100" height="150">
            </div>
            <div class="d">
                <div style="font-weight: bold">{{title}}</div>
                <br>
                <div>{{year}}</div>
                <br>
                <div>{{crew}}</div>
                <br>
                <div>{{imDbRating}}</div>
            </div>
        </div>
    {{/films}}
</div>
<div class="commAndRate">
    {{#films}}
    <form method="post" action="sendComment">
        <input type="text" name="comment">
        <input type="hidden" name="filmID" value="{{stringId}}">
        <input type="hidden" name="_csrf" value="{{_csrf.token}}"/>
        <button type="submit">Отправить</button>
    </form>
    {{/films}}
</div>
<div class="kirgizz">
    {{#comments}}
        {{username}}
        {{text}}
        {{data}}
    {{/comments}}
</div>
</body>
</html>